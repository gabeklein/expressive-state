{
	"name": "expressive-state",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*",
		"examples/*"
	],
	"scripts": {
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest",
		"build": "lerna run build",
		"clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
		"push": "lerna publish --conventional-commits --no-private",
		"pr:staging": "bash .github/scripts/pr-to-staging.sh"
	},
	"devDependencies": {
		"@types/node": "^25.2.0",
		"@types/react": "^19",
		"@vitest/coverage-v8": "^4.0.18",
		"jsdom": "^27.4.0",
		"lerna": "^9.0.3",
		"prettier": "^3.8.1",
		"tsup": "^8.0.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	}
}
{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2020",
    "esModuleInterop": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "bundler",
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "@expressive/*": [
        "../*/src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}